{
  "name": "@phantomchain/core-logger-winston",
  "description": "Winston Logger for PHANTOM Core",
  "version": "0.1.2",
  "contributors": [
    "Fran√ßois-Xavier Thoorens <fx@ark.io>",
    "Brian Faust <brian@ark.io>"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "scripts": {
    "build:docs": "../../node_modules/.bin/jsdoc -c jsdoc.json",
    "test": "PHANTOM_ENV=test jest --forceExit",
    "test:coverage": "PHANTOM_ENV=test jest --coverage --forceExit",
    "test:debug": "PHANTOM_ENV=test node --inspect-brk ../../node_modules/.bin/jest --runInBand --watch",
    "test:watch": "PHANTOM_ENV=test jest --runInBand --watch",
    "test:watch:all": "PHANTOM_ENV=test jest --runInBand --watchAll",
    "flow:coverage": "flow-coverage-report --config ../../.flowcoverage.json",
    "flow:check": "flow check ./lib",
    "flow:deps": "flow-typed install",
    "lint": "eslint ./ --fix",
    "depcheck": "depcheck ./ --ignores=flow-bin,winston-daily-rotate-file"
  },
  "dependencies": {
    "@phantomchain/core-logger": "^0.1.2",
    "chalk": "^2.4.1",
    "colors": "^1.3.2",
    "moment": "^2.22.2",
    "node-emoji": "^1.8.1",
    "winston": "^3.1.0",
    "winston-daily-rotate-file": "^3.5.1"
  },
  "devDependencies": {
    "capture-console": "^1.0.1",
    "flow-bin": "^0.86.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.x"
  }
}
